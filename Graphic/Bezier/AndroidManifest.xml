<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.sundayliu.graphic.bezier"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk
      android:minSdkVersion="8"
      android:targetSdkVersion="19" />
    <application 
        android:hardwareAccelerated="false"
        android:label="@string/app_name" android:icon="@drawable/ic_launcher" android:allowBackup="true">
        <activity android:name="Bezier"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".BezierViewActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" />

        <activity
            android:name=".BezierEvaluatorActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" />

        <activity
            android:name=".DropPagerIndicatorActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" />
        
        <activity
          android:name=".ClipingActivity"
          android:configChanges="orientation|keyboardHidden|screenSize"
          android:label="@string/app_name" />
    </application>
</manifest>
